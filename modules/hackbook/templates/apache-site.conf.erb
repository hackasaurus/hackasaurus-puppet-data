<VirtualHost *:80>
  ServerName <%= site %>
  ServerAlias <%= site %>.dev

  DocumentRoot <%= staticFilesDir %>
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  <Directory <%= staticFilesDir %>/>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride FileInfo
    Order allow,deny
    allow from all
  </Directory>

  WSGIDaemonProcess <%= site %> processes=1 threads=15
  WSGIProcessGroup <%= site %>
  WSGIScriptAlias /wsgi <%= wsgiDir %>/hackbook_dot_hackasaurus_dot_org.py
</VirtualHost>
